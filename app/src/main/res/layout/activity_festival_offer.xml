<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".FestivalOfferActivity">

    <RelativeLayout
        android:id="@+id/festival_offers_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/festival_offers_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:translationZ="5dp"
            app:tint="@color/white"
            android:src="@drawable/ic_next"
            android:rotation="180"
            android:background="@drawable/circular_background"
            android:backgroundTint="@color/smoky_black"
            android:layout_alignParentLeft="true"
            android:layout_margin="10dp"
            android:padding="5dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Festival Offers"
            android:textSize="16sp"
            android:translationZ="5dp"
            android:background="@drawable/text_background"
            android:backgroundTint="@color/creative_yellow_dark"
            android:paddingRight="30dp"
            android:paddingLeft="30dp"
            android:layout_alignParentRight="true"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_margin="10dp"
            android:textColor="@color/white"
            android:fontFamily="serif"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/festival_offer_total_cost_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:padding="12dp"
        android:layout_below="@+id/festival_offers_header"
        android:background="@drawable/login_text_background">
        <LinearLayout
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/totalCost"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:textColor="@color/creative_red"
                android:fontFamily="serif" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" : "
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_gravity="center"
                android:textColor="@color/creative_red"
                android:fontFamily="serif" />
            <TextView
                android:id="@+id/festival_offers_total_cost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="000"
                android:drawablePadding="5dp"
                android:drawableLeft="@drawable/ic_india_rupee_symbol"
                android:drawableTint="@color/creative_red"
                android:textSize="16sp"
                android:textColor="@color/creative_red"
                android:fontFamily="serif"/>
        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/festival_offers_both_pizza_relative_layout"
        android:layout_width="match_parent"
        android:visibility="visible"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/festival_offer_total_cost_layout"
        android:layout_centerHorizontal="true">

        <LinearLayout
            android:id="@+id/festival_offers_pizza_size_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerHorizontal="true">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/pizzaSize"
                android:fontFamily="serif"
                android:layout_gravity="center"
                android:textColor="@color/smoky_black"
                android:textSize="15sp"/>
            <androidx.cardview.widget.CardView
                android:id="@+id/festival_offer_pizza_size_medium_layout"
                android:layout_width="30dp"
                android:layout_height="30dp"
                app:cardCornerRadius="15dp"
                android:translationZ="-2dp"
                android:layout_marginLeft="10dp">
                <TextView
                    android:id="@+id/festival_offer_pizza_size_medium"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="M"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:fontFamily="serif"
                    android:gravity="center"
                    android:background="@color/creative_red"
                    android:textColor="@color/white"/>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/festival_offer_pizza_size_large_layout"
                android:layout_width="30dp"
                android:layout_height="30dp"
                app:cardCornerRadius="15dp"
                android:translationZ="-2dp"
                android:layout_marginLeft="10dp">
                <TextView
                    android:id="@+id/festival_offer_pizza_size_large"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="L"
                    android:fontFamily="serif"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:background="@color/white"
                    android:textColor="@color/title_background"/>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_margin="5dp"
            android:layout_below="@+id/festival_offers_pizza_size_layout"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <androidx.cardview.widget.CardView
                    android:id="@+id/festival_offers_pizza_one_card"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="15dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp">
                    <LinearLayout
                        android:id="@+id/festival_offers_pizza_one_linear"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingLeft="5dp"
                        android:background="@color/smoky_black"
                        android:paddingRight="5dp"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp">
                        <TextView
                            android:id="@+id/festival_offers_pizza_one_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="Pizza 1"
                            android:textSize="14sp"
                            android:fontFamily="serif"
                            android:textColor="@color/white"/>
                        <View
                            android:id="@+id/festival_offers_pizza_one_view"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_margin="3dp"
                            android:background="@color/white"/>
                        <TextView
                            android:id="@+id/festival_offers_pizza_one"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Pizza Name"
                            android:fontFamily="serif"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:textSize="13sp"
                            android:textColor="@color/white"/>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:id="@+id/festival_offers_pizza_two_card"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="15dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp">
                    <LinearLayout
                        android:id="@+id/festival_offers_pizza_two_linear"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingLeft="5dp"
                        android:background="@color/white"
                        android:paddingRight="5dp"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp">
                    <TextView
                        android:id="@+id/festival_offers_pizza_two_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Pizza 2"
                        android:textSize="14sp"
                        android:fontFamily="serif"
                        android:textColor="@color/smoky_black"/>
                    <View
                        android:id="@+id/festival_offers_pizza_two_view"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_margin="3dp"
                        android:background="@color/smoky_black"/>
                    <TextView
                        android:id="@+id/festival_offers_pizza_two"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pizza Name"
                        android:fontFamily="serif"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:textSize="13sp"
                        android:textColor="@color/smoky_black"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:id="@+id/festival_offers_pizza_three_card"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="15dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp">
                    <LinearLayout
                        android:id="@+id/festival_offers_pizza_three_linear"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingLeft="5dp"
                        android:background="@color/white"
                        android:paddingRight="5dp"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp">
                        <TextView
                            android:id="@+id/festival_offers_pizza_three_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="Pizza 3"
                            android:textSize="14sp"
                            android:fontFamily="serif"
                            android:textColor="@color/smoky_black"/>
                        <View
                            android:id="@+id/festival_offers_pizza_three_view"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_margin="3dp"
                            android:background="@color/smoky_black"/>
                        <TextView
                            android:id="@+id/festival_offers_pizza_three"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Pizza Name"
                            android:fontFamily="serif"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:textSize="13sp"
                            android:textColor="@color/smoky_black"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

        </HorizontalScrollView>
    </RelativeLayout>

    <FrameLayout
        android:id="@+id/festival_offers_pizza_frame_layout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="60dp"
        android:visibility="visible"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/festival_offers_both_pizza_relative_layout">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/festival_offers_pizza_layout1"
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:layout_height="wrap_content" />
        <ProgressBar
            android:id="@+id/festival_offers_progress_bar1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminateTint="@color/creative_red"
            android:layout_gravity="center"/>
    </FrameLayout>

    <FrameLayout
        android:id="@+id/festival_offers_pizza_frame_layout2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="60dp"
        android:layout_marginTop="10dp"
        android:visibility="gone"
        android:layout_below="@+id/festival_offers_both_pizza_relative_layout">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/festival_offers_pizza_layout2"
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:layout_height="wrap_content" />
        <ProgressBar
            android:id="@+id/festival_offers_progress_bar2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminateTint="@color/creative_red"
            android:layout_gravity="center"/>
    </FrameLayout>

    <FrameLayout
        android:id="@+id/festival_offers_pizza_frame_layout3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="60dp"
        android:layout_marginTop="10dp"
        android:visibility="gone"
        android:layout_below="@+id/festival_offers_both_pizza_relative_layout">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/festival_offers_pizza_layout3"
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:layout_height="wrap_content" />
        <ProgressBar
            android:id="@+id/festival_offers_progress_bar3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminateTint="@color/creative_red"
            android:layout_gravity="center"/>
    </FrameLayout>

    <ImageView
        android:id="@+id/festival_offers_block_screen_one"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@color/black"
        android:visibility="gone"
        android:alpha="0.7"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/festival_offers_block_screen_two"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="10dp"
        app:cardCornerRadius="20dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/creative_red">
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    app:tint="@color/white"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="40dp"
                    android:layout_marginBottom="20dp"
                    android:src="@drawable/ic_box"/>
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:fontFamily="serif"
                android:textColor="@color/smoky_black"
                android:gravity="right"
                android:paddingTop="40dp"
                android:paddingBottom="40dp"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:background="@color/white"
                android:text="Sorry!!!\nThis offer is currently inactive..."/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/festival_offers_place_order"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/selectAnAddress"
        android:background="@drawable/text_background"
        android:backgroundTint="@color/creative_red"
        android:textColor="@color/white"
        android:layout_alignParentRight="true"
        android:fontFamily="serif"
        android:translationZ="3dp"
        android:paddingRight="15dp"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp"
        android:paddingLeft="15dp"
        android:paddingTop="10dp"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:paddingBottom="8dp"/>

    <RelativeLayout
        android:id="@+id/festival_offer_address_list_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/text_background"
        android:backgroundTint="@color/white"
        android:visibility="gone"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="58dp"
        android:translationZ="3dp">
        <TextView
            android:id="@+id/festival_offer_no_address_found"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:text="No Address Found...\nAdd an address first\nProfile - Address - Add new address"
            android:gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="4dp"
            android:textSize="14sp"
            android:textColor="@color/smoky_black"
            android:fontFamily="serif"/>
        <FrameLayout
            android:id="@+id/festival_offer_address_list_frame"
            android:layout_marginTop="0dp"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginBottom="0dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/chooseAnAddress"
                android:layout_gravity="center_horizontal"
                android:fontFamily="serif"
                android:textSize="14sp"
                android:layout_margin="10dp"
                android:textColor="@color/smoky_black"/>
            <androidx.recyclerview.widget.RecyclerView
                android:layout_marginTop="30dp"
                android:id="@+id/festival_offer_address_list"
                android:layout_width="match_parent"
                android:layout_marginBottom="40dp"
                android:layout_height="match_parent"/>
            <RelativeLayout
                android:layout_gravity="bottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="10dp"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:background="@color/creative_yellow_dark" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/or"
                    android:textColor="@color/creative_yellow_dark"
                    android:fontFamily="serif"
                    android:layout_centerHorizontal="true"
                    android:background="@color/white"
                    android:padding="10dp"/>
            </RelativeLayout>
        </FrameLayout>
        <EditText
            android:id="@+id/custom_address_festival_offer"
            android:layout_below="@+id/festival_offer_address_list_frame"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/login_text_background"
            android:hint="home no, gali no., city, pincode"
            android:fontFamily="serif"
            android:textSize="14sp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"/>
        <TextView
            android:id="@+id/custom_address_festival_offer_button"
            android:layout_below="@+id/custom_address_festival_offer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save"
            android:layout_centerHorizontal="true"
            android:fontFamily="serif"
            android:textSize="14sp"
            android:paddingLeft="50dp"
            android:textColor="@color/white"
            android:layout_marginTop="5dp"
            android:paddingRight="50dp"
            android:background="@drawable/text_background"
            android:backgroundTint="@color/creative_red"
            android:layout_marginBottom="10dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"/>
        <ProgressBar
            android:id="@+id/festival_offer_address_list_progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminateTint="@color/smoky_black"
            android:layout_centerInParent="true"/>
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/shop_name_item_offers_text"
        android:visibility="gone"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:id="@+id/festival_offer_seller_id"/>

</RelativeLayout>