<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content">


    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="10dp"
        app:cardCornerRadius="20dp"
        android:layout_marginBottom="10dp">
        <RelativeLayout
            android:id="@+id/order_details_main_background"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/creative_green">
            <TextView
                android:id="@+id/order_details_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Margarita"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:fontFamily="serif"
                android:maxLines="1"
                android:gravity="right"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="135dp"/>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="80dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                app:cardCornerRadius="20dp"
                android:layout_marginBottom="15dp">
                <LinearLayout
                    android:id="@+id/order_details_description_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:background="@color/creative_green_light">
                    <TextView
                        android:id="@+id/order_details_description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Size :\nExtra Cheese:\nExtra Topping:"
                        android:fontFamily="serif"
                        android:textSize="13sp"
                        android:textColor="@color/white" />
                    <TextView
                        android:id="@+id/order_details_quantity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Quantity : "
                        android:fontFamily="serif"
                        android:textSize="13sp"
                        android:textColor="@color/white" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>
            <LinearLayout
                android:id="@+id/cart_item_price_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginRight="10dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="40dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="\u0040"
                    android:layout_marginRight="5dp"
                    android:textColor="@color/white"
                    android:textSize="18sp"/>
                <TextView
                    android:id="@+id/order_details_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="000"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:fontFamily="serif"
                    android:drawableLeft="@drawable/ic_india_rupee_symbol"
                    android:drawableTint="@color/white"
                    android:drawablePadding="3dp"/>
            </LinearLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <ImageView
        android:id="@+id/order_details_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/paneer_burger"
        android:scaleType="fitXY"
        android:translationZ="5dp"
        android:layout_marginLeft="40dp"/>

</RelativeLayout>