<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ShopDetailsActivity">

    <RelativeLayout
        android:id="@+id/menu_fragment_header"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:translationZ="5dp"
        android:translationY="-20dp"
        android:background="@drawable/text_background"
        android:backgroundTint="@color/creative_red">

        <com.github.siyamed.shapeimageview.mask.PorterShapeImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/main_screen_back"
            android:tint="@color/white"
            android:scaleType="centerCrop"
            android:alpha="0.3"
            app:siShape="@drawable/text_background"/>
        <TextView
            android:id="@+id/menu_fragment_shop_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textStyle="bold"
            android:text="Shop Location"
            android:translationZ="5dp"
            android:background="@drawable/text_background"
            android:backgroundTint="@color/creative_yellow_dark"
            android:layout_centerHorizontal="true"
            android:layout_marginRight="40dp"
            android:paddingRight="30dp"
            android:paddingLeft="30dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_marginBottom="20dp"
            android:layout_alignParentBottom="true"
            android:textColor="@color/white"
            android:fontFamily="serif"/>

    </RelativeLayout>

    <FrameLayout
        android:id="@+id/shop_list_frame"
        android:layout_below="@+id/menu_fragment_header"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="75dp">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/shop_details_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <ProgressBar
            android:id="@+id/shop_details_list_progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminateTint="@color/creative_yellow_dark"
            android:layout_gravity="center"/>
    </FrameLayout>

    <RelativeLayout
        android:translationZ="5dp"
        android:visibility="gone"
        android:id="@+id/shop_close_relative_layout"
        android:layout_width="match_parent"
        android:layout_marginBottom="75dp"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/shop_close_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/text_background"
            android:backgroundTint="@color/white"
            android:translationZ="5dp"
            app:cardCornerRadius="20dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="35dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/creative_yellow_dark"
                android:padding="10dp">
                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_help"
                    app:tint="@color/white"
                    android:layout_alignParentRight="true"
                    android:layout_margin="5dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/shopIsClosed"
                    android:textSize="18sp"
                    android:layout_margin="5dp"
                    android:layout_centerVertical="true"
                    android:textColor="@color/white"
                    android:fontFamily="serif"/>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="30dp">
                <ImageView
                    android:layout_marginTop="90dp"
                    android:layout_gravity="center_horizontal"
                    app:tint="@color/smoky_black"
                    android:layout_marginBottom="20dp"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/ic_baseline_shop_default"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sorry"
                    android:textSize="16sp"
                    android:fontFamily="serif"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/smoky_black"
                    android:gravity="center"
                    android:layout_marginBottom="5dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/PleaseContactOwnerForDetails"
                    android:textSize="13sp"
                    android:fontFamily="serif"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/title_background"
                    android:gravity="center"
                    android:layout_marginBottom="5dp"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/circular_background"
            android:backgroundTint="@color/creative_red"
            android:translationZ="7dp"
            android:translationY="20dp"
            android:layout_centerHorizontal="true"
            android:layout_alignBottom="@+id/shop_close_card">

            <ImageView
                android:id="@+id/shop_details_close"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_baseline_add"
                app:tint="@color/white"
                android:rotation="45"/>
        </RelativeLayout>


    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/shop_name_text"
        android:visibility="gone"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/shop_name_item_text"
        android:visibility="gone"/>

</RelativeLayout>