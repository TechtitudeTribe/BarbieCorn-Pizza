<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="230dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:layout_height="250dp">
    <androidx.cardview.widget.CardView
        android:layout_width="180dp"
        android:layout_height="210dp"
        app:cardCornerRadius="20dp"
        android:translationZ="2dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp">
        <RelativeLayout
            android:id="@+id/menu_item_relative_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/creative_red">
            <TextView
                android:id="@+id/menu_item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Menu Item Name"
                android:maxLines="1"
                android:fontFamily="serif"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="14sp"
                android:layout_marginTop="10dp"
                android:textColor="@color/white"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"/>
            <ProgressBar
                android:visibility="gone"
                android:id="@+id/menu_item_fav_progress_bar"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:padding="5dp"
                android:indeterminateTint="@color/white"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="60dp"/>
            <ImageView
                android:visibility="visible"
                android:id="@+id/menu_item_fav"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:padding="5dp"
                android:src="@drawable/ic_favorite_border_24"
                app:tint="@color/creative_red"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:backgroundTint="@color/white"
                android:background="@drawable/square_background"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="60dp"/>
            <ImageView
                android:visibility="visible"
                android:id="@+id/menu_item_add"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:padding="5dp"
                android:backgroundTint="@color/white"
                android:background="@drawable/square_background"
                android:src="@drawable/ic_baseline_add"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_margin="10dp"/>
            <ImageView
                android:visibility="gone"
                android:id="@+id/menu_item_cart"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:padding="5dp"
                android:backgroundTint="@color/white"
                android:background="@drawable/square_background"
                android:src="@drawable/ic_add_cart_240"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_margin="10dp"/>
            <ProgressBar
                android:visibility="gone"
                android:id="@+id/menu_item_progress_bar"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:padding="5dp"
                android:indeterminateTint="@color/white"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_margin="10dp"/>
            <TextView
                android:id="@+id/menu_item_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="399"
                android:maxLines="1"
                android:drawablePadding="5dp"
                android:drawableLeft="@drawable/ic_india_rupee_symbol"
                android:drawableTint="@color/white"
                android:fontFamily="serif"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginBottom="15dp"
                android:textColor="@color/white"
                android:layout_alignParentLeft="true"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="10dp"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>


    <ImageView
        android:id="@+id/menu_item_image"
        android:layout_width="140dp"
        android:layout_height="120dp"
        android:scaleType="fitXY"
        android:translationX="15dp"
        android:translationY="0dp"
        android:layout_centerVertical="true"
        android:translationZ="10dp"
        android:src="@drawable/paneer_burger"/>
</RelativeLayout>