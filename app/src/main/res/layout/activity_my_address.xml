<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MyAddressActivity">

    <RelativeLayout
        android:id="@+id/my_address_header"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:translationZ="5dp"
        android:translationY="-20dp"
        android:background="@drawable/text_background"
        android:backgroundTint="@color/white">


        <com.github.siyamed.shapeimageview.mask.PorterShapeImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/main_screen_back"
            android:tint="@color/smoky_black"
            android:scaleType="centerCrop"
            android:alpha="0.3"
            app:siShape="@drawable/text_background"/>
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_address"
            android:padding="20dp"
            android:background="@drawable/circular_background"
            android:backgroundTint="@color/creative_yellow_dark"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:translationZ="5dp"
            android:translationY="25dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="My Address"
            android:textSize="16sp"
            android:translationZ="5dp"
            android:background="@drawable/text_background"
            android:backgroundTint="@color/creative_yellow_dark"
            android:layout_centerHorizontal="true"
            android:layout_marginRight="40dp"
            android:paddingRight="30dp"
            android:paddingLeft="30dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_marginTop="125dp"
            android:textColor="@color/white"
            android:fontFamily="serif"/>

    </RelativeLayout>

    <FrameLayout
        android:layout_below="@+id/my_address_header"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="10dp">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/my_address_list_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"/>
        <ProgressBar
            android:id="@+id/my_address_activity_progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminateTint="@color/creative_yellow_dark"
            android:layout_gravity="center"
            android:translationZ="5dp"/>
    </FrameLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/add_address_floating_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_add"
        app:fabSize="normal"
        android:tint="@color/white"
        app:maxImageSize="30dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:translationZ="5dp"
        android:layout_marginBottom="30dp"
        android:layout_marginRight="20dp"
        app:backgroundTint="@color/smoky_black"/>

    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/add_new_address_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/add_address_floating_button"
        android:translationZ="5dp">
        <ProgressBar
            android:id="@+id/add_new_address_progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:translationZ="10dp"
            android:visibility="gone"
            android:layout_centerInParent="true"
            android:indeterminateTint="@color/creative_red"/>
        <androidx.cardview.widget.CardView
            android:id="@+id/add_new_address_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp"
            android:translationZ="4dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="30dp">
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingTop="15dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:paddingBottom="65dp">
                    <EditText
                        android:id="@+id/new_address_house_no"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/text_background"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"
                        android:translationZ="2dp"
                        android:inputType="number"
                        android:paddingLeft="10dp"
                        android:layout_marginLeft="3dp"
                        android:layout_marginRight="3dp"
                        android:paddingRight="10dp"
                        android:textSize="13sp"
                        android:fontFamily="serif"
                        android:maxLines="1"
                        android:hint="Flat, House no., Building, Company" />
                    <EditText
                        android:id="@+id/new_address_area"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/text_background"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"
                        android:paddingLeft="10dp"
                        android:translationZ="2dp"
                        android:layout_marginLeft="3dp"
                        android:layout_marginRight="3dp"
                        android:paddingRight="10dp"
                        android:textSize="13sp"
                        android:fontFamily="serif"
                        android:layout_marginTop="10dp"
                        android:hint="Area, Colony, Street, Sector" />
                    <EditText
                        android:id="@+id/new_address_landmark"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/text_background"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:translationZ="2dp"
                        android:textSize="13sp"
                        android:fontFamily="serif"
                        android:layout_marginLeft="3dp"
                        android:layout_marginRight="3dp"
                        android:layout_marginTop="10dp"
                        android:hint="Landmark e.g. near Apollo Hospital" />
                    <EditText
                        android:id="@+id/new_address_town"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/text_background"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:textSize="13sp"
                        android:layout_marginLeft="3dp"
                        android:layout_marginRight="3dp"
                        android:maxLines="1"
                        android:translationZ="2dp"
                        android:fontFamily="serif"
                        android:layout_marginTop="10dp"
                        android:hint="Town/City" />
                    <EditText
                        android:id="@+id/new_address_pincode"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/text_background"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"
                        android:paddingLeft="10dp"
                        android:layout_marginLeft="3dp"
                        android:layout_marginRight="3dp"
                        android:paddingRight="10dp"
                        android:textSize="13sp"
                        android:fontFamily="serif"
                        android:inputType="number"
                        android:translationZ="2dp"
                        android:maxLength="6"
                        android:layout_marginTop="10dp"
                        android:hint="PIN code" />
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp">
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_centerVertical="true"
                            android:background="@color/creative_red" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:paddingTop="2dp"
                            android:paddingBottom="2dp"
                            android:text="or"
                            android:layout_centerHorizontal="true"
                            android:textColor="@color/smoky_black"
                            android:background="@color/white"
                            android:fontFamily="serif"/>
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/choose_current_location"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"
                        android:translationZ="2dp"
                        android:paddingLeft="10dp"
                        android:layout_marginBottom="3dp"
                        android:layout_marginLeft="3dp"
                        android:fontFamily="serif"
                        android:layout_marginRight="3dp"
                        android:drawableRight="@drawable/ic_baseline_gps"
                        android:drawableTint="@color/smoky_black"
                        android:background="@drawable/text_background"
                        android:text="choose current location"
                        android:textColor="@color/smoky_black"
                        android:paddingRight="10dp"/>
                </LinearLayout>
            </ScrollView>


        </androidx.cardview.widget.CardView>
        <TextView
            android:id="@+id/add_new_address_cancel_button"
            android:layout_alignBottom="@+id/add_new_address_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:fontFamily="serif"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:translationY="25dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/text_background"
            android:backgroundTint="@color/title_background"
            android:translationZ="6dp"/>
        <TextView
            android:id="@+id/add_new_address_add_button"
            android:layout_alignBottom="@+id/add_new_address_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Address"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:fontFamily="serif"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_alignParentRight="true"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:translationY="25dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/text_background"
            android:backgroundTint="@color/creative_red"
            android:translationZ="6dp"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/no_address_layout"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_height="match_parent"
        android:layout_below="@+id/my_address_header">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sorry!!!"
                android:layout_gravity="center"
                android:fontFamily="serif"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="@color/creative_red"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No address found..."
                android:layout_gravity="center"
                android:fontFamily="serif"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="@color/title_background"/>
        </LinearLayout>
    </RelativeLayout>


</RelativeLayout>