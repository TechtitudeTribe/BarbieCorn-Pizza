<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragment">

    <RelativeLayout
        android:id="@+id/home_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_width="36dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="7dp"
            android:layout_marginLeft="10dp"
            android:translationZ="3dp"
            android:layout_centerVertical="true"
            android:layout_height="36dp"
            android:src="@drawable/icon_home"
            android:padding="7dp"
            app:tint="@color/white"
            android:background="@drawable/square_background"
            android:backgroundTint="@color/creative_red"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="55dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BarbieCorn"
                android:textColor="@color/creative_red"
                android:textSize="18sp"
                android:textStyle="bold"
                android:fontFamily="serif"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Pizza"
                android:textStyle="bold"
                android:textColor="@color/smoky_black"
                android:textSize="18sp"
                android:fontFamily="serif"/>
        </LinearLayout>
        <ImageView
            android:id="@+id/home_app_share_button"
            android:layout_alignParentRight="true"
            android:layout_width="36dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="7dp"
            android:layout_marginRight="10dp"
            android:translationZ="3dp"
            android:layout_centerVertical="true"
            android:layout_height="36dp"
            android:src="@drawable/ic_baseline_share_48"
            android:padding="7dp"
            app:tint="@color/white"
            android:background="@drawable/square_background"
            android:backgroundTint="@color/creative_red"/>
    </RelativeLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/slider_layout"
        android:layout_below="@id/home_header"
        app:cardCornerRadius="10dp"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.smarteist.autoimageslider.SliderLayout
            android:id="@+id/imageSlider"
            android:layout_width="match_parent"
            android:layout_height="200dp" />

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/home_loading_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:translationZ="5dp"
        android:background="@drawable/login_text_background">
        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:indeterminateTint="@color/creative_red"
            android:layout_gravity="center_horizontal"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Please wait..."
            android:fontFamily="serif"
            android:textColor="@color/smoky_black"
            android:textSize="15sp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"/>
    </LinearLayout>

    <ScrollView
        android:layout_below="@+id/slider_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/home_explore_menu_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_gravity="bottom"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/exploreMenu"
                            android:textSize="14sp"
                            android:layout_marginBottom="10dp"
                            android:layout_gravity="center"
                            android:fontFamily="serif"
                            android:translationX="-20dp"
                            android:layout_alignParentBottom="true"
                            android:textColor="@color/white"
                            android:background="@drawable/text_background"
                            android:backgroundTint="@color/creative_yellow_dark"
                            android:paddingRight="30dp"
                            android:paddingLeft="30dp"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_toLeftOf="@+id/home_shop_address"
                            android:layout_height="wrap_content"
                            android:text="Current City :  "
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:fontFamily="serif"
                            android:layout_marginLeft="10dp"
                            android:textColor="@color/smoky_black"/>
                        <TextView
                            android:id="@+id/home_shop_address"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Shop Address"
                            android:layout_alignParentRight="true"
                            android:textSize="14sp"
                            android:layout_marginRight="20dp"
                            android:layout_marginBottom="8dp"
                            android:fontFamily="serif"
                            android:textStyle="bold"
                            android:textColor="@color/smoky_black"/>
                        <TextView
                            android:id="@+id/home_change_address"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Change Location"
                            android:layout_below="@+id/home_shop_address"
                            android:textSize="14sp"
                            android:layout_alignParentRight="true"
                            android:fontFamily="serif"
                            android:background="@drawable/text_background"
                            android:backgroundTint="@color/creative_red"
                            android:textColor="@color/white"
                            android:paddingRight="40dp"
                            android:translationX="20dp"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"
                            android:paddingLeft="20dp"/>
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/login_text_background">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=": Track Your Order Here :"
                        android:fontFamily="serif"
                        android:textSize="15sp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/smoky_black"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/creative_red"
                        android:layout_marginBottom="10dp"
                        android:layout_marginRight="30dp"
                        android:layout_marginLeft="30dp"/>
                    <TextView
                        android:id="@+id/home_no_recent_orders"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/smoky_black"
                        android:text="No recent Orders"
                        android:fontFamily="serif"
                        android:textSize="14sp"
                        android:layout_marginTop="10dp"
                        android:visibility="visible"
                        android:layout_marginBottom="20dp"
                        android:layout_gravity="center_horizontal"/>
                    <TextView
                        android:id="@+id/home_track_orders"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:text="@string/trackOrder"
                        android:paddingRight="30dp"
                        android:paddingLeft="30dp"
                        android:paddingTop="9dp"
                        android:visibility="gone"
                        android:paddingBottom="9dp"
                        android:background="@drawable/text_background"
                        android:backgroundTint="@color/creative_red"
                        android:fontFamily="serif"
                        android:textSize="14sp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="20dp"
                        android:layout_gravity="center_horizontal"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <androidx.cardview.widget.CardView
                        android:id="@+id/home_my_favourite"
                        android:layout_width="154dp"
                        android:layout_height="140dp"
                        app:cardCornerRadius="10dp"
                        android:translationZ="-5dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="7dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="15dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:background="@color/creative_red">
                            <ImageView
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:src="@drawable/fav"
                                app:tint="@color/white"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="20dp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/text_background"
                                android:paddingLeft="20dp"
                                android:paddingRight="20dp"
                                android:paddingTop="8dp"
                                android:layout_marginTop="25dp"
                                android:layout_gravity="center_horizontal"
                                android:textColor="@color/creative_red"
                                android:fontFamily="serif"
                                android:layout_marginBottom="15dp"
                                android:textSize="12sp"
                                android:text="@string/myfav"
                                android:paddingBottom="8dp"/>
                        </LinearLayout>

                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:id="@+id/veg_pizza_home_card"
                        android:layout_width="154dp"
                        android:layout_height="140dp"
                        app:cardCornerRadius="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="7dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="15dp">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/veg_pizza"
                            android:scaleType="centerCrop"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/text_background"
                            android:paddingLeft="40dp"
                            android:paddingRight="20dp"
                            android:paddingTop="8dp"
                            android:textColor="@color/creative_red"
                            android:fontFamily="serif"
                            android:layout_marginBottom="15dp"
                            android:layout_gravity="bottom"
                            android:textSize="12sp"
                            android:translationX="-20dp"
                            android:text="@string/vegPizza"
                            android:paddingBottom="8dp"/>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
                <LinearLayout
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <androidx.cardview.widget.CardView
                        android:id="@+id/side_orders_home_card"
                        android:layout_width="154dp"
                        android:layout_height="140dp"
                        app:cardCornerRadius="10dp"
                        android:layout_marginTop="7dp"
                        android:layout_marginBottom="7dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="15dp">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/side_orders"
                            android:scaleType="centerCrop"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/text_background"
                            android:paddingLeft="40dp"
                            android:paddingRight="20dp"
                            android:paddingTop="8dp"
                            android:textColor="@color/creative_red"
                            android:fontFamily="serif"
                            android:layout_marginBottom="15dp"
                            android:layout_gravity="bottom"
                            android:textSize="12sp"
                            android:translationX="-20dp"
                            android:text="@string/sideOrders"
                            android:paddingBottom="8dp"/>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:id="@+id/deserts_home_card"
                        android:layout_width="154dp"
                        android:layout_height="140dp"
                        app:cardCornerRadius="10dp"
                        android:layout_marginTop="7dp"
                        android:layout_marginBottom="7dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="15dp">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/deserts"
                            android:scaleType="centerCrop"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/text_background"
                            android:paddingLeft="40dp"
                            android:paddingRight="20dp"
                            android:paddingTop="8dp"
                            android:textColor="@color/creative_red"
                            android:fontFamily="serif"
                            android:layout_marginBottom="15dp"
                            android:layout_gravity="bottom"
                            android:textSize="12sp"
                            android:translationX="-20dp"
                            android:text="@string/deserts"
                            android:paddingBottom="8dp"/>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
                <androidx.cardview.widget.CardView
                    android:id="@+id/beverages_home_card"
                    android:layout_width="338dp"
                    android:layout_height="140dp"
                    app:cardCornerRadius="10dp"
                    android:layout_marginTop="7dp"
                    android:layout_marginBottom="10dp"
                    android:layout_gravity="center">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY"
                        android:src="@drawable/beverages"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/text_background"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:paddingTop="8dp"
                        android:gravity="center"
                        android:textColor="@color/creative_red"
                        android:fontFamily="serif"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_gravity="bottom"
                        android:textSize="12sp"
                        android:translationY="20dp"
                        android:text="@string/beverages"
                        android:paddingBottom="28dp"/>
                </androidx.cardview.widget.CardView>
            </LinearLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/currentOffers"
                android:textSize="14sp"
                android:layout_gravity="center"
                android:fontFamily="serif"
                android:layout_marginTop="10dp"
                android:textColor="@color/white"
                android:layout_below="@+id/slider_layout"
                android:background="@drawable/text_background"
                android:backgroundTint="@color/creative_yellow_dark"
                android:paddingRight="30dp"
                android:paddingLeft="30dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"/>
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="75dp"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <androidx.cardview.widget.CardView
                        android:id="@+id/everyday_offers"
                        android:layout_width="300dp"
                        android:layout_height="160dp"
                        app:cardCornerRadius="10dp"
                        android:layout_margin="5dp"
                        android:layout_gravity="center">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:src="@drawable/everyday_offer" />
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:id="@+id/festival_offers"
                        android:layout_width="300dp"
                        android:layout_height="160dp"
                        app:cardCornerRadius="10dp"
                        android:layout_margin="5dp"
                        android:layout_gravity="center">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:src="@drawable/festival_offer" />
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:id="@+id/special_time_offers"
                        android:layout_width="300dp"
                        android:layout_height="160dp"
                        app:cardCornerRadius="10dp"
                        android:layout_margin="5dp"
                        android:layout_gravity="center">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:src="@drawable/special_time_offer" />
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:id="@+id/friday_offers"
                        android:layout_width="300dp"
                        android:layout_height="160dp"
                        app:cardCornerRadius="10dp"
                        android:layout_margin="5dp"
                        android:layout_gravity="center">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:src="@drawable/friday_offer" />
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:id="@+id/bestseller_offers"
                        android:visibility="visible"
                        android:layout_width="300dp"
                        android:layout_height="160dp"
                        app:cardCornerRadius="10dp"
                        android:layout_margin="5dp"
                        android:layout_gravity="center">

                        <ImageView
                            android:layout_width="300dp"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:src="@drawable/bestseller_offer" />
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </HorizontalScrollView>

        </LinearLayout>
    </ScrollView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/offers_validation"
        android:visibility="gone"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/track_id_home"
        android:visibility="gone"/>
</RelativeLayout>