<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MyOrderDetailsActivity">

    <RelativeLayout
        android:id="@+id/my_order_details_header"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:translationZ="5dp"
        android:translationY="-20dp"
        android:background="@drawable/text_background"
        android:backgroundTint="@color/white">


        <com.github.siyamed.shapeimageview.mask.PorterShapeImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:alpha="0.3"
            android:scaleType="centerCrop"
            android:src="@drawable/main_screen_back"
            android:tint="@color/smoky_black"
            app:siShape="@drawable/text_background" />
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_orders"
            android:padding="20dp"
            android:background="@drawable/circular_background"
            android:backgroundTint="@color/creative_yellow_dark"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:translationZ="5dp"
            android:translationY="25dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/myOrderDes"
            android:textSize="16sp"
            android:translationZ="5dp"
            android:background="@drawable/text_background"
            android:backgroundTint="@color/creative_yellow_dark"
            android:layout_centerHorizontal="true"
            android:layout_marginRight="40dp"
            android:paddingRight="30dp"
            android:paddingLeft="30dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_marginTop="125dp"
            android:textColor="@color/white"
            android:fontFamily="serif"/>

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/my_order_details_header"
        android:layout_marginTop="20dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/order_item_description_details"

            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/order_item_description_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="Item Name"
                android:layout_toLeftOf="@+id/order_item_description_price"
                android:textStyle="bold"
                android:textColor="@color/smoky_black"
                android:fontFamily="serif"
                android:textSize="16sp"/>
            <TextView
                android:id="@+id/order_details_ewe_hi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="@string/itemDetails"
                android:layout_toLeftOf="@+id/order_item_description_price"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/order_item_description_name"
                android:textColor="@color/smoky_black"
                android:fontFamily="serif"
                android:textSize="16sp"/>
            <TextView
                android:id="@+id/order_item_description_des"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Item Description"
                android:layout_marginTop="6dp"
                android:layout_below="@+id/order_details_ewe_hi"
                android:textColor="@color/smoky_black"
                android:fontFamily="serif"
                android:textSize="14sp"/>
            <TextView
                android:id="@+id/order_item_description_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="000"
                android:textStyle="bold"
                android:drawableLeft="@drawable/ic_india_rupee_symbol"
                android:drawableTint="@color/smoky_black"
                android:drawablePadding="2dp"
                android:layout_alignParentRight="true"
                android:textColor="@color/smoky_black"
                android:fontFamily="serif"
                android:textSize="16sp"/>
        </RelativeLayout>
        <LinearLayout
            android:id="@+id/order_item_description_address_layout"
            android:layout_below="@+id/order_item_description_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/text_background"
            android:translationZ="5dp"
            android:padding="10dp"
            android:layout_margin="20dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="@string/deliveryAddress"
                android:layout_toLeftOf="@+id/cart_item_description_price"
                android:textStyle="bold"
                android:textColor="@color/smoky_black"
                android:fontFamily="serif"
                android:textSize="16sp"/>
            <TextView
                android:id="@+id/order_item_description_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="House No, City - 000000"
                android:layout_marginTop="5dp"
                android:layout_toLeftOf="@+id/cart_item_description_price"
                android:textColor="@color/smoky_black"
                android:fontFamily="serif"
                android:textSize="14sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_below="@+id/order_item_description_address_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="70dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/paymentMenthod"
                    android:textColor="@color/smoky_black"
                    android:textStyle="bold"
                    android:fontFamily="serif"
                    android:textSize="14sp"/>
                <TextView
                    android:id="@+id/order_item_description_payment_method"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="null"
                    android:textColor="@color/smoky_black"
                    android:fontFamily="serif"
                    android:textSize="14sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/orderType"
                    android:textColor="@color/smoky_black"
                    android:textStyle="bold"
                    android:fontFamily="serif"
                    android:textSize="14sp"/>
                <TextView
                    android:id="@+id/order_item_description_order_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="null"
                    android:textColor="@color/smoky_black"
                    android:fontFamily="serif"
                    android:textSize="14sp"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
    </ScrollView>

    <TextView
        android:id="@+id/order_details_track_order"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/trackOrder"
        android:textSize="16sp"
        android:background="@drawable/text_background"
        android:backgroundTint="@color/creative_red"
        android:textColor="@color/white"
        android:fontFamily="serif"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:translationZ="5dp"
        android:layout_marginBottom="15dp"/>



    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/order_details_track_order_relative_layout"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_marginLeft="20dp"
        android:translationZ="7dp"
        android:background="@drawable/track_order_background"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="68dp"
        android:layout_marginRight="20dp">
        <ScrollView
            android:layout_width="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:translationZ="5dp"
                    android:id="@+id/confirmed_layout"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="109dp">
                        <View
                            android:id="@+id/track_order_view_confirm"
                            android:layout_width="7dp"
                            android:layout_height="100dp"
                            android:layout_centerHorizontal="true"
                            android:background="@drawable/layout_background"/>
                        <ImageView
                            android:id="@+id/track_order_image_confirm"
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:layout_alignParentBottom="true"
                            android:src="@drawable/circular_background"
                            app:tint="@color/creative_red"/>
                    </RelativeLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ordered"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:layout_gravity="bottom"
                        android:layout_marginLeft="30dp"
                        android:textSize="14sp"
                        android:fontFamily="serif"/>
                </LinearLayout>
                <LinearLayout
                    android:translationZ="4dp"
                    android:translationY="-5dp"
                    android:id="@+id/cancelled_layout"
                    android:layout_below="@id/confirmed_layout"
                    android:layout_width="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="109dp">
                        <View
                            android:id="@+id/track_order_view_cancelled"
                            android:layout_width="7dp"
                            android:layout_height="100dp"
                            android:layout_centerHorizontal="true"
                            android:background="@drawable/text_background"/>
                        <ImageView
                            android:id="@+id/track_order_image_cancelled"
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:layout_alignParentBottom="true"
                            android:src="@drawable/circular_background"/>
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/cancelled_order_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/cancelledConfirmed"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:layout_gravity="bottom"
                        android:layout_marginLeft="30dp"
                        android:textSize="14sp"
                        android:fontFamily="serif"/>
                </LinearLayout>
                <LinearLayout
                    android:translationZ="4dp"
                    android:translationY="-5dp"
                    android:id="@+id/cooking_layout"
                    android:layout_below="@id/cancelled_layout"
                    android:layout_width="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="109dp">
                        <View
                            android:id="@+id/track_order_view_cooking"
                            android:layout_width="7dp"
                            android:layout_height="100dp"
                            android:layout_centerHorizontal="true"
                            android:background="@drawable/text_background"/>
                        <ImageView
                            android:id="@+id/track_order_image_cooking"
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:layout_alignParentBottom="true"
                            android:src="@drawable/circular_background"/>
                    </RelativeLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/cooking"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:layout_gravity="bottom"
                        android:layout_marginLeft="30dp"
                        android:textSize="14sp"
                        android:fontFamily="serif"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/out_for_delivery_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/cooking_layout"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="-5dp"
                    android:orientation="horizontal"
                    android:translationY="-10dp"
                    android:translationZ="3dp">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="109dp">

                        <View
                            android:id="@+id/track_order_view_out"
                            android:layout_width="7dp"
                            android:layout_height="100dp"
                            android:layout_centerHorizontal="true"
                            android:background="@drawable/text_background" />

                        <ImageView
                            android:id="@+id/track_order_image_out"
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:layout_alignParentBottom="true"
                            android:src="@drawable/circular_background" />
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/ready_out_order_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginLeft="30dp"
                        android:fontFamily="serif"
                        android:text="Food is Ready/On The Way"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:translationZ="2dp"
                    android:translationY="-15dp"
                    android:id="@+id/delivery_layout"
                    android:layout_below="@id/out_for_delivery_layout"
                    android:layout_width="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="109dp">
                        <View
                            android:id="@+id/track_order_view_delivered"
                            android:layout_width="7dp"
                            android:layout_height="100dp"
                            android:layout_centerHorizontal="true"
                            android:background="@drawable/text_background"/>
                        <ImageView
                            android:id="@+id/track_order_image_delivered"
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:layout_alignParentBottom="true"
                            android:src="@drawable/circular_background"/>
                    </RelativeLayout>
                    <TextView
                        android:id="@+id/delivered_complete_order_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/delivered"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:layout_gravity="bottom"
                        android:layout_marginLeft="30dp"
                        android:textSize="14sp"
                        android:fontFamily="serif"/>
                </LinearLayout>
            </RelativeLayout>
        </ScrollView>

    </RelativeLayout>

    <ProgressBar
        android:id="@+id/order_item_description_progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminateTint="@color/creative_red"
        android:layout_centerInParent="true"
        android:translationZ="8dp"/>
  </RelativeLayout>