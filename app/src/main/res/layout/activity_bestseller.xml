<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".BestsellerActivity">

    <RelativeLayout
        android:id="@+id/bestseller_offers_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">
        <ImageView
            android:id="@+id/bestseller_offers_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:translationZ="5dp"
            app:tint="@color/white"
            android:src="@drawable/ic_next"
            android:rotation="180"
            android:background="@drawable/circular_background"
            android:backgroundTint="@color/smoky_black"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:padding="5dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textStyle="bold"
            android:text="Bestseller Offers"
            android:background="@drawable/text_background"
            android:backgroundTint="@color/creative_yellow_dark"
            android:layout_centerHorizontal="true"
            android:layout_marginRight="0dp"
            android:paddingRight="30dp"
            android:paddingLeft="30dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_alignParentRight="true"
            android:textColor="@color/white"
            android:fontFamily="serif"/>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/bestseller_order_pizza_select_size"
        android:layout_below="@+id/bestseller_offers_list_view_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_centerHorizontal="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pizzaSize"
            android:fontFamily="serif"
            android:layout_gravity="center"
            android:textColor="@color/smoky_black"
            android:textSize="15sp"/>
        <androidx.cardview.widget.CardView
            android:id="@+id/bestseller_offer_pizza_size_medium_layout"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:cardCornerRadius="15dp"
            android:translationZ="-2dp"
            android:layout_marginLeft="10dp">
            <TextView
                android:id="@+id/bestseller_offer_pizza_size_medium"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="M"
                android:textStyle="bold"
                android:textSize="16sp"
                android:fontFamily="serif"
                android:gravity="center"
                android:background="@color/creative_red"
                android:textColor="@color/white"/>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/bestseller_offer_pizza_size_large_layout"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:cardCornerRadius="15dp"
            android:translationZ="-2dp"
            android:layout_marginLeft="10dp">
            <TextView
                android:id="@+id/bestseller_offer_pizza_size_large"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="L"
                android:fontFamily="serif"
                android:gravity="center"
                android:textSize="16sp"
                android:textStyle="bold"
                android:background="@color/white"
                android:textColor="@color/title_background"/>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <RelativeLayout
        android:layout_below="@+id/bestseller_order_pizza_select_size"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="60dp">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/bestseller_offers_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"/>
        <ProgressBar
            android:id="@+id/bestseller_offers_progress_bar"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminateTint="@color/creative_red"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/bestseller_offer_address_list_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/text_background"
        android:backgroundTint="@color/white"
        android:visibility="gone"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="58dp"
        android:translationZ="3dp">
        <TextView
            android:id="@+id/bestseller_offer_no_address_found"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:text="No Address Found...\nAdd an address first\nProfile - Address - Add new address"
            android:gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="4dp"
            android:textSize="14sp"
            android:textColor="@color/smoky_black"
            android:fontFamily="serif"/>
        <FrameLayout
            android:id="@+id/bestseller_offer_address_list_frame"
            android:layout_marginTop="0dp"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginBottom="0dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/chooseAnAddress"
                android:layout_gravity="center_horizontal"
                android:fontFamily="serif"
                android:textSize="14sp"
                android:layout_margin="10dp"
                android:textColor="@color/smoky_black"/>
            <androidx.recyclerview.widget.RecyclerView
                android:layout_marginTop="30dp"
                android:id="@+id/bestseller_offer_address_list"
                android:layout_width="match_parent"
                android:layout_marginBottom="40dp"
                android:layout_height="match_parent"/>
            <RelativeLayout
                android:layout_gravity="bottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="10dp"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:background="@color/creative_yellow_dark" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/or"
                    android:textColor="@color/creative_yellow_dark"
                    android:fontFamily="serif"
                    android:layout_centerHorizontal="true"
                    android:background="@color/white"
                    android:padding="10dp"/>
            </RelativeLayout>
        </FrameLayout>
        <EditText
            android:id="@+id/custom_address_bestseller_offer"
            android:layout_below="@+id/bestseller_offer_address_list_frame"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/login_text_background"
            android:hint="home no, gali no., city, pincode"
            android:fontFamily="serif"
            android:textSize="14sp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"/>
        <TextView
            android:id="@+id/custom_address_bestseller_offer_button"
            android:layout_below="@+id/custom_address_bestseller_offer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save"
            android:layout_centerHorizontal="true"
            android:fontFamily="serif"
            android:textSize="14sp"
            android:paddingLeft="50dp"
            android:textColor="@color/white"
            android:layout_marginTop="5dp"
            android:paddingRight="50dp"
            android:background="@drawable/text_background"
            android:backgroundTint="@color/creative_red"
            android:layout_marginBottom="10dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"/>
        <ProgressBar
            android:id="@+id/bestseller_offer_address_list_progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminateTint="@color/smoky_black"
            android:layout_centerInParent="true"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/bestseller_offers_place_order"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/selectAnAddress"
        android:background="@drawable/text_background"
        android:backgroundTint="@color/creative_red"
        android:textColor="@color/white"
        android:layout_alignParentRight="true"
        android:fontFamily="serif"
        android:translationZ="3dp"
        android:paddingRight="15dp"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp"
        android:paddingLeft="15dp"
        android:paddingTop="10dp"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:paddingBottom="8dp"/>

    <RelativeLayout
        android:id="@+id/bestseller_offers_list_view_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bestseller_offers_header"
        android:background="@drawable/login_text_background"
        android:layout_marginLeft="10dp"
        android:orientation="vertical"
        android:layout_marginRight="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=":  Item Details  :"
            android:textSize="15sp"
            android:layout_marginTop="5dp"
            android:layout_centerHorizontal="true"
            android:fontFamily="serif"
            android:textColor="@color/creative_red"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/creative_red"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="28dp"
            android:layout_marginRight="30dp"/>
        <LinearLayout
            android:id="@+id/bestseller_offers_menu_item_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:visibility="invisible"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/bestseller_offers_list_item_image"
                android:layout_width="90dp"
                android:layout_gravity="center_horizontal"
                android:layout_margin="10dp"
                android:layout_height="90dp"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:layout_gravity="center"
                android:layout_marginBottom="0dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Item Name : "
                    android:textSize="13sp"
                    android:fontFamily="serif"
                    android:textColor="@color/smoky_black"/>
                <TextView
                    android:id="@+id/bestseller_offers_list_item_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:text="Item Name"
                    android:fontFamily="serif"
                    android:textColor="@color/smoky_black"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:layout_gravity="center"
                android:layout_marginBottom="0dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Item Price : "
                    android:textSize="13sp"
                    android:fontFamily="serif"
                    android:textColor="@color/smoky_black"/>
                <TextView
                    android:id="@+id/bestseller_offers_list_item_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:fontFamily="serif"
                    android:textColor="@color/smoky_black"/>
            </LinearLayout>
            <TextView
                android:id="@+id/bestseller_offers_list_item_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:maxLines="1"
                android:layout_gravity="center"
                android:layout_marginTop="0dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:layout_marginBottom="10dp"
                android:fontFamily="serif"
                android:textColor="@color/smoky_black"/>
        </LinearLayout>
        <TextView
            android:id="@+id/bestseller_offers_no_menu_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No item is added..."
            android:layout_centerInParent="true"
            android:fontFamily="serif"
            android:visibility="visible"
            android:textColor="@color/smoky_black"
            android:textSize="14sp"/>
    </RelativeLayout>

    <ImageView
        android:id="@+id/bestseller_block_screen_one"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@color/black"
        android:visibility="gone"
        android:alpha="0.7"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/bestseller_block_screen_two"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="10dp"
        app:cardCornerRadius="20dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/creative_red">
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    app:tint="@color/white"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="40dp"
                    android:layout_marginBottom="20dp"
                    android:src="@drawable/ic_box"/>
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:fontFamily="serif"
                android:textColor="@color/smoky_black"
                android:gravity="right"
                android:paddingTop="40dp"
                android:paddingBottom="40dp"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:background="@color/white"
                android:text="Sorry!!!\nThis offer is currently inactive..."/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:id="@+id/bestseller_special_offer_seller_id"/>

    <RelativeLayout
        android:id="@+id/bestseller_offers_customize_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:translationZ="10dp"
        android:background="@drawable/login_text_background"
        android:layout_below="@+id/bestseller_offers_header"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp">
        <TextView
            android:id="@+id/bestseller_offers_customize_layout_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=":  Customize your Pizza  :"
            android:textSize="15sp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:fontFamily="serif"
            android:textColor="@color/creative_red"/>
        <View
            android:id="@+id/bestseller_offers_customize_layout_view"
            android:layout_width="match_parent"
            android:layout_below="@+id/bestseller_offers_customize_layout_title"
            android:layout_height="1dp"
            android:background="@color/creative_red"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="0dp"
            android:layout_marginRight="30dp"/>
        <LinearLayout
            android:id="@+id/bestseller_offers_customize_layout_total_cost_layout"
            android:layout_width="wrap_content"
            android:layout_below="@+id/bestseller_offers_customize_layout_view"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Cost : "
                android:fontFamily="serif"
                android:textColor="@color/creative_red"
                android:textSize="15sp"/>
            <TextView
                android:id="@+id/bestseller_offers_customize_layout_total_cost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="000"
                android:drawableLeft="@drawable/ic_india_rupee_symbol"
                android:drawableTint="@color/smoky_black"
                android:fontFamily="serif"
                android:textColor="@color/smoky_black"
                android:textSize="14sp"/>
        </LinearLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/bestseller_offers_customize_layout_total_cost_layout"
            android:layout_above="@+id/bestseller_offers_custimze_pizza_add">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/text_background"
                    android:backgroundTint="@color/title_background"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp">
                    <TextView
                        android:id="@+id/bestseller_add_extra_cheese_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:text="@string/addExtraCheese"
                        android:textSize="13sp"
                        android:fontFamily="serif"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"
                        android:paddingLeft="10dp"
                        android:layout_marginLeft="10dp"
                        android:paddingRight="10dp"/>
                    <ImageView
                        android:layout_width="200dp"
                        android:layout_height="80dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/cheese_burst"
                        android:layout_below="@id/bestseller_add_extra_cheese_text"
                        android:layout_marginLeft="20dp"
                        android:paddingLeft="10dp"
                        android:layout_marginBottom="10dp"/>
                    <ImageView
                        android:visibility="gone"
                        android:id="@+id/bestseller_add_extra_cheese_verified"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_check_circle"
                        android:layout_alignParentRight="true"
                        android:layout_margin="10dp"
                        android:translationZ="3dp"
                        app:tint="@color/creative_red"/>
                    <ImageView
                        android:id="@+id/bestseller_add_extra_cheese_button"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignParentRight="true"
                        android:layout_margin="10dp"
                        android:translationZ="3dp"
                        android:background="@drawable/circular_background"
                        android:backgroundTint="@color/white"
                        android:src="@drawable/ic_baseline_add"
                        android:padding="3dp"
                        app:tint="@color/title_background"/>
                    <TextView
                        android:id="@+id/bestseller_add_extra_cheese_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="20"
                        android:drawableTint="@color/white"
                        android:drawableLeft="@drawable/ic_india_rupee_symbol"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="85dp"
                        android:fontFamily="serif"
                        android:textSize="17sp"
                        android:drawablePadding="5dp"
                        android:textColor="@color/white"
                        android:textStyle="bold"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/text_background"
                    android:backgroundTint="@color/title_background"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp">
                    <TextView
                        android:id="@+id/bestseller_choices_of_crusts_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:text="@string/choicesOfCrusts"
                        android:textSize="14sp"
                        android:fontFamily="serif"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"
                        android:paddingLeft="10dp"
                        android:textStyle="bold"
                        android:layout_marginLeft="10dp"
                        android:paddingRight="10dp"/>
                    <RelativeLayout
                        android:id="@+id/bestseller_cheese_burst_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_below="@+id/bestseller_choices_of_crusts_text">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:text="@string/cheeseBurst"
                            android:textSize="13sp"
                            android:fontFamily="serif"
                            android:paddingTop="8dp"
                            android:layout_centerVertical="true"
                            android:paddingBottom="8dp"
                            android:paddingLeft="10dp"
                            android:layout_marginLeft="10dp"
                            android:paddingRight="10dp"/>
                        <TextView
                            android:id="@+id/bestseller_add_cheese_burst_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="20"
                            android:drawableTint="@color/white"
                            android:drawableLeft="@drawable/ic_india_rupee_symbol"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="60dp"
                            android:fontFamily="serif"
                            android:textSize="17sp"
                            android:layout_centerVertical="true"
                            android:drawablePadding="5dp"
                            android:textColor="@color/white"
                            android:textStyle="bold"/>
                        <ImageView
                            android:id="@+id/bestseller_add_cheese_burst_button"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="10dp"
                            android:translationZ="0dp"
                            android:layout_centerVertical="true"
                            android:background="@drawable/circular_background"
                            android:backgroundTint="@color/white"
                            android:src="@drawable/ic_baseline_add"
                            android:padding="3dp"
                            app:tint="@color/title_background"/>
                        <ImageView
                            android:visibility="gone"
                            android:id="@+id/bestseller_add_cheese_burst_verified"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_check_circle"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="10dp"
                            android:translationZ="0dp"
                            android:layout_centerVertical="true"
                            app:tint="@color/creative_red"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_below="@+id/bestseller_cheese_burst_layout">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:text="@string/thinCrust"
                            android:textSize="13sp"
                            android:fontFamily="serif"
                            android:paddingTop="8dp"
                            android:layout_centerVertical="true"
                            android:paddingBottom="8dp"
                            android:paddingLeft="10dp"
                            android:layout_marginLeft="10dp"
                            android:paddingRight="10dp"/>
                        <TextView
                            android:id="@+id/bestseller_add_thin_crust_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="20"
                            android:drawableTint="@color/white"
                            android:drawableLeft="@drawable/ic_india_rupee_symbol"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="60dp"
                            android:fontFamily="serif"
                            android:textSize="17sp"
                            android:layout_centerVertical="true"
                            android:drawablePadding="5dp"
                            android:textColor="@color/white"
                            android:textStyle="bold"/>
                        <ImageView
                            android:id="@+id/bestseller_add_thin_crust_button"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="10dp"
                            android:translationZ="0dp"
                            android:layout_centerVertical="true"
                            android:background="@drawable/circular_background"
                            android:backgroundTint="@color/white"
                            android:src="@drawable/ic_baseline_add"
                            android:padding="3dp"
                            app:tint="@color/title_background"/>
                        <ImageView
                            android:visibility="gone"
                            android:id="@+id/bestseller_add_thin_crust_verified"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_check_circle"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="10dp"
                            android:translationZ="0dp"
                            android:layout_centerVertical="true"
                            app:tint="@color/creative_red"/>
                    </RelativeLayout>
                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Topping Chart"
                    android:textSize="15sp"
                    android:layout_marginTop="0dp"
                    android:layout_gravity="center"
                    android:fontFamily="serif"
                    android:background="@drawable/text_background"
                    android:backgroundTint="@color/title_background"
                    android:paddingLeft="30dp"
                    android:paddingRight="30dp"
                    android:translationY="15dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="20dp"
                    android:textColor="@color/white"/>
                <RelativeLayout
                    android:id="@+id/bestseller_veg_topping_layout"
                    android:visibility="visible"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:backgroundTint="@color/title_background"
                    android:background="@drawable/text_background">
                    <FrameLayout
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/bestseller_veg_topping_list"
                            android:layout_width="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="10dp"/>
                        <ProgressBar
                            android:id="@+id/bestseller_veg_topping_progress_bar"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:indeterminateTint="@color/creative_red"/>
                    </FrameLayout>
                </RelativeLayout>
            </LinearLayout>
        </ScrollView>
        <TextView
            android:id="@+id/bestseller_offers_custimze_pizza_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Close"
            android:textColor="@color/white"
            android:background="@drawable/text_background"
            android:backgroundTint="@color/title_background"
            android:paddingRight="30dp"
            android:layout_alignParentLeft="true"
            android:fontFamily="serif"
            android:layout_alignParentBottom="true"
            android:layout_margin="10dp"
            android:paddingLeft="30dp"
            android:paddingTop="9dp"
            android:paddingBottom="9dp"/>
        <TextView
            android:id="@+id/bestseller_offers_custimze_pizza_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Item"
            android:textColor="@color/white"
            android:background="@drawable/text_background"
            android:backgroundTint="@color/creative_red"
            android:paddingRight="30dp"
            android:layout_alignParentRight="true"
            android:fontFamily="serif"
            android:layout_alignParentBottom="true"
            android:layout_margin="10dp"
            android:paddingLeft="30dp"
            android:paddingTop="9dp"
            android:paddingBottom="9dp"/>
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bestseller_veg_topping_price"
        android:visibility="gone"/>

</RelativeLayout>