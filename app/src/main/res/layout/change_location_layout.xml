<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/change_location_relative_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/change_location_card"
        android:translationZ="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/smoky_black"
                android:padding="10dp">
                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_address"
                    app:tint="@color/white"
                    android:layout_alignParentRight="true"
                    android:layout_margin="5dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Change\nLocation"
                    android:textSize="18sp"
                    android:layout_margin="5dp"
                    android:layout_centerVertical="true"
                    android:textColor="@color/white"
                    android:fontFamily="serif"/>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/white">
                <androidx.cardview.widget.CardView
                    android:id="@+id/location_chandpur_card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="20dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="20dp">
                    <TextView
                        android:id="@+id/location_chandpur"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:text="Chandpur"
                        android:paddingTop="8dp"
                        android:textSize="14sp"
                        android:fontFamily="serif"
                        android:textColor="@color/smoky_black"
                        android:paddingBottom="8dp"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"/>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:id="@+id/location_kanth_card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="20dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="20dp">
                    <TextView
                        android:id="@+id/location_kanth"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:text="Kanth"
                        android:paddingTop="8dp"
                        android:textSize="14sp"
                        android:fontFamily="serif"
                        android:textColor="@color/smoky_black"
                        android:paddingBottom="8dp"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"/>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:id="@+id/location_moradabad_card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="20dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="40dp">
                    <TextView
                        android:id="@+id/location_moradabad"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:text="Moradabad"
                        android:paddingTop="8dp"
                        android:textSize="14sp"
                        android:fontFamily="serif"
                        android:textColor="@color/smoky_black"
                        android:paddingBottom="8dp"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"/>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </LinearLayout>
        <ProgressBar
            android:id="@+id/change_location_progress_bar"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:translationY="30dp"
            android:indeterminateTint="@color/creative_red"/>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/change_location_update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/change_location_card"
        android:paddingRight="30dp"
        android:paddingLeft="30dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:textSize="14sp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="50dp"
        android:text="@string/update"
        android:fontFamily="serif"
        android:textColor="@color/white"
        android:background="@drawable/text_background"
        android:backgroundTint="@color/creative_red"
        android:translationZ="7dp"
        android:translationY="15dp"/>
    <TextView
        android:id="@+id/change_location_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/change_location_card"
        android:paddingRight="30dp"
        android:paddingLeft="30dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:textSize="14sp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="50dp"
        android:text="@string/cancel"
        android:fontFamily="serif"
        android:textColor="@color/white"
        android:background="@drawable/text_background"
        android:backgroundTint="@color/smoky_black"
        android:translationZ="7dp"
        android:translationY="15dp"/>

</RelativeLayout>